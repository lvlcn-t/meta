{
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml",
        "editor.insertSpaces": true,
        "editor.tabSize": 2,
        "editor.indentSize": "tabSize"
    },
    "markdownlint.config": {
        "extends": "./markdownlint.json"
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.markdownlint": "explicit"
    }
}