{
  "default": true,
  "ul-style": {
    "style": "consistent"
  },
  "ul-indent": {
    "indent": 2
  },
  "ol-prefix": {
    "style": "ordered"
  },
  "line-length": {
    "line_length": 132,
    "tables": false,
    "code_blocks": false
  },
  "blanks-around-headings": {
    "lines_above": 1,
    "lines_below": 1
  },
  "no-trailing-punctuation": {
    "punctuation": ".,;:!"
  },
  "no-inline-html": {
    "allowed_elements": [
      "a",
      "img"
    ]
  },
  "code-block-style": {
    "style": "fenced"
  }
}